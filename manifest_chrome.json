{
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "3.0.2",
    "default_locale": "ja",
    "manifest_version": 3,
    "icons": {
        "16": "icon/newIcon_TUIC_C_Blue.png",
        "48": "icon/newIcon_TUIC_C_Blue.png",
        "128": "icon/newIcon_TUIC_C_Blue.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.twitter.com/*"
            ],
            "js": [
                "scr/observer.js",
                "scr/data.js",
                "scr/library.js",
                "scr/option.js",
                "scr/applyCSS.js",
                "scr/index.js"
            ],
            "run_at": "document_start"
        },
          {
            "matches": [
                "*://*.twitter.com/*"
            ],
            "js": [
                "scr/runningSafemode.js"
            ],
            "run_at": "document_end"
        }
    ],
    "options_ui": {
        "page":"TUIC/options/options.html",
        "browser_style":true
    },
    "permissions": [
        "notifications",
        "storage"
    ],
    "action": {
        "default_icon": {
            "16": "icon/newIcon_TUIC_C_Blue.svg",
            "48": "icon/newIcon_TUIC_C_Blue.svg",
            "128": "icon/newIcon_TUIC_C_Blue.svg"
        },
        "default_title": "Twitter UI Customizer",
        "default_popup": "TUIC/popup/popup.html"
    },
    "background":{
        "service_worker":"background.js"
    },
    "host_permissions":[
        "https://github.com/kaonasi-biwa/Twitter-UI-Customizer/releases/latest/download/*",
        "https://objects.githubusercontent.com/*",
        "https://*.mico.re/*",
        "https://abs.twimg.com/*"
    ]
}