{
    "name": "Twitter UI Customizer",
    "version": "2.6.1",
    "manifest_version": 3,
    "description": "TwitterのUIのカスタマイズ性を向上させます！",
    "icons": {
        "16": "icon/icon16.png",
        "48": "icon/icon48.png",
        "128": "icon/icon128.png"
    },
    "content_scripts": [
          {
            "matches": [
                "*://*.twitter.com/*"
            ],
            "js": [
                "scr/style.js"
            ]
        }
    ],
    "options_ui": {
        "page":"scr/options.html",
        "browser_style":true
    },
    "permissions": [
        "tabs",
        "notifications",
        "storage"
    ],
    "action": {
        "default_icon": {
            "16": "icon/icon16.png",
            "48": "icon/icon48.png",
            "128": "icon/icon128.png"
        },
        "default_title": "Twitter UI Customizer",
        "default_popup": "scr/popup.html"
    },
    "background":{
        "service_worker":"background.js"
    },
    "host_permissions":[
        "https://raw.githubusercontent.com/kaonasi-biwa/Twitter-UI-Customizer/main/*",
        "https://*.mico.re/*"
    ]
}