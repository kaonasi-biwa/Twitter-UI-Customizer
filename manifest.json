{
    "applications": {
        "gecko": {
          "id": "Twitter_UI_Customizer@kaonasi.biwa"
        }
      },
    "name": "Twitter UI Customizer",
    "version": "2.1.6",
    "manifest_version": 2,
    "description": "TwitterのUI(の色)をある程度自由に選択できるようにします。",
    "icons": {
        "16": "icon/icon16.png",
        "48": "icon/icon48.png",
        "128": "icon/icon128.png"
    },
    "permissions": [
        "tabs",
        "declarativeContent",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.twitter.com/*"
            ],
            "js": [
                "scr/style.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "scr/background.js"
        ],
        "persistent": false
    },

    "browser_action": {
        "default_icon": {
            "16": "icon/icon16.png",
            "48": "icon/icon48.png",
            "128": "icon/icon128.png"
        },
        "default_title": "Twitter UI Customizer",
        "default_popup": "scr/popup.html"
    },
    "options_page": "scr/options.html",
    "options_ui": {
        "page":"scr/options.html"
    }
}