{
    "typeAcquisition": {
        "include": ["@types/chrome", "vite/client"],
    },
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "isolatedModules": true,
        "skipLibCheck": true,
        "target": "ES2022",
        "allowImportingTsExtensions": true,
        "emitDeclarationOnly": true,
        "declaration": true,
        "paths": {
            "@content/*": ["./src/content/*"],
            "@shared/*": ["./src/shared/*"],
            "@modules/*": ["./src/content/modules/*"],
        },
    },
}
