{
    "private": true,
    "type": "module",
    "scripts": {
        "build": "pnpm build:firefox",
        "build:firefox": "vite build --mode firefox",
        "build:chromium": "vite build --mode chromium",
        "debug": "pnpm debug:firefox",
        "debug:firefox": "pnpm build:firefox --watch",
        "debug:chromium": "pnpm build:chromium --watch",
        "lint": "pnpm lint:tsc & pnpm lint:eslint & pnpm lint:stylelint & pnpm lint:prettier",
        "lint:tsc": "vue-tsc --noEmit",
        "lint:eslint": "eslint .",
        "lint:stylelint": "stylelint **/*.{css,vue}",
        "lint:prettier": "prettier --check **/*.css",
        "format": "pnpm format:eslint & pnpm format:stylelint & pnpm format:prettier",
        "format:eslint": "eslint --fix .",
        "format:stylelint": "stylelint --fix **/*.{css,vue}",
        "format:prettier": "prettier --write **/*.css"
    },
    "dependencies": {
        "bootstrap-icons": "^1.11.3",
        "pinia": "^2.2.6",
        "solid-js": "^1.9.3",
        "vue": "^3.5.13"
    },
    "devDependencies": {
        "@eslint/js": "^9.15.0",
        "@stylistic/eslint-plugin": "^2.10.1",
        "@types/chrome": "^0.0.283",
        "@unocss/eslint-plugin": "^0.64.1",
        "@vitejs/plugin-vue": "^5.2.0",
        "crx": "^5.0.1",
        "dependency-cruiser": "^16.6.0",
        "dotenv": "^16.4.5",
        "eslint": "^9.15.0",
        "eslint-import-resolver-typescript": "^3.6.3",
        "eslint-plugin-import-x": "^4.4.2",
        "eslint-plugin-solid": "^0.14.4",
        "eslint-plugin-unused-imports": "^4.1.4",
        "eslint-plugin-vue": "^9.31.0",
        "globals": "^15.12.0",
        "lightningcss": "^1.28.1",
        "prettier": "^3.3.3",
        "stylelint": "^16.10.0",
        "stylelint-config-recess-order": "^5.1.1",
        "stylelint-config-recommended-vue": "^1.5.0",
        "stylelint-config-standard": "^36.0.1",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.14.0",
        "unocss": "^0.64.1",
        "vite": "^5.4.11",
        "vite-plugin-solid": "^2.10.2",
        "vite-svg-loader": "^5.1.0",
        "vue-tsc": "^2.1.10",
        "web-ext": "^8.3.0"
    },
    "engines": {
        "node": ">=22.11",
        "pnpm": ">=9"
    }
